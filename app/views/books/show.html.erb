<% if flash[:notice] %>
	<div class= "flash">
		<%= flash[:notice] %>
	</div>
<% end %>

<h1>Book detail</h1>
<table>
	<tr>
			<td></td>
			<td><%= @book.title %></td>
			<td><%= @book.body %></td>
		<% if @book.user == current_user %>
			<td><%= link_to "Edit",edit_book_path(@book.id) %></td>
			<td><%= link_to "Destroy",book_path,method: :delete, data: {confirm: "本当に消しますか？"} %></td>
		<% end %>
	</tr>
</table>
