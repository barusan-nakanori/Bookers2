<% if flash[:notice] %>
	<div class= "flash">
		<%= flash[:notice] %>
	</div>
<% end %>

<%= render "users/sidebar" , book:@book %>
<h1>Books</h1>
<table>
	<tbody>
	<tr>
		<th></th>
		<th>Title</th>
		<th>Opinion</th>
	</tr>
	<tr>
		<% @books.each do |book| %>
		<td>
			<%= link_to user_path(@user) do %>
				<%= attachment_image_tag book.user, :profile_image , size: "60x60" %>
			<% end %>
		</td>
		<td>
			<%= link_to book_path(book.id) do %>
				<%= book.title %>
			<% end %>
		</td>
		<td><%= book.body %></td>
		<% end%>
	</tr>
	</tbody>
</table>
